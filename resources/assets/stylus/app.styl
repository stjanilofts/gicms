@import 'typographic'

@import 'kal-mixins'

/* Colors */
$kal-green 		= #00ab66
$kal-green-lite	= lighten($kal-green, 15)
$kal-green-dark	= darken($kal-green, 15)

$kal-dark 		= #231f20
$kal-dark-lite	= lighten($kal-dark, 15)
$kal-dark-dark	= darken($kal-dark, 15)

$kal-lite 		= #d8d1ce

/* My fonts */
$oswald       = 'Oswald', 'sans-serif'

/*

$minor-second   = 1.067
$major-second   = 1.125
$minor-third    = 1.2
$major-third    = 1.25
$perfect-fourth = 1.333
$aug-fourth     = 1.414
$perfect-fifth  = 1.5
$minor-sixth    = 1.6
$golden         = 1.618
$major-sixth    = 1.667
$minor-seventh  = 1.778
$major-seventh  = 1.875
$octave         = 2
$major-tenth    = 2.5
$major-eleventh = 2.667
$major-twelfth  = 3
$double-octave  = 4

*/

$line-height-ratio  = 1.75
$header-ratio       = $golden
$body-font          = $helvetica
$body-font-weight   = 300
$body-color         = #666
$header-font        = $oswald
$header-font-weight = 500
$header-color       = $kal-green
$min-font           = 15px
$max-font           = 18px
$min-width          = 480px
$max-width          = 1600px
$vertical-rhythm    = true

typographic()

gutter = 1em
@lost gutter 1em

/* Breakpoints */
@import 'media-queries'

html, body {
	background: $kal-dark
	margin: 0
	padding: 0

	a {
		color: $kal-green
		transition: color 0.2s ease

		&:focus,
		&:active,
		&:hover {
			color lighten($kal-green, 10)
			transition: color 0.2s ease
		}
	}
}

.Head
	/*box-shadow: inset 0px -10vh 100px rgba(0,0,0, 0.35)*/
	width: 100%
	display: block
	position: relative
	#logo
		img
			+large()
				width: 320px
			+small()
				width: 220px

	background: #EEE
	padding: 0
	margin: 0
	lost-align: center
	min-height: 200px
	&.frontpage
		min-height: 200px
		max-height: 80vh
		height: 80vw


.Menu
	position: relative
	background: $kal-green;
	box-shadow: 1px 1px 3px rgba(darken($kal-dark, 20), 0.3)

nav
	margin: 0 auto
	max-width: $max-width
	&.main
		div
			display: flex
			flex-direction: row
			flex: 1 1 auto
			justify-content: center
			.active
				a
					background: darken($kal-green, 5)
					color: $kal-dark
			+small()
				display: inline-block
				width: 100%;
				padding:0
				margin:0
				flex: none
				flex-direction: none
				div
					width: 50%;
					padding: 0;
					margin 0;
					text-align: center;
					a
						display: block
						padding: 0;
						margin 0;
			+xsmall()
				display: inline-block
				width: 100%;
				padding:0
				margin:0
				flex: none
				flex-direction: none
				div
					width: 100%;
					float: none
					padding: 0;
					margin 0;
					text-align: center;
					a
						display: block
						padding: 0;
						margin 0;
			a
				color: #FFF
				font-weight: bold
				line-height: 3em
				font-size: 0.85em
				text-align: center
				width: 100%;
				display: inline-block
				text-transform: none
				transition: all 0.3s
				text-decoration: none
				font-family: $oswald
				text-rendering: optimizeLegibility !important
				i
					margin-right: 0.5em
				&:hover,
				&:active,
				&:focus
					background: darken($kal-green, 5);
					transition: all 0.3s
					text-decoration: none
					color: $kal-dark


.container
	+ .container
		margin-top: 0
		padding-top: 0
	padding: gutter
	background: $kal-dark
	lost-center: 1600px no-flex


.Page
	min-height: 40vh
	background: $kal-lite
	position: relative
	padding: gutter
	margin-bottom: gutter
	lost-center: 1600px no-flex

	h1:first-of-type
		text-transform: uppercase
		padding-top: 0
		margin-top: 0
	/*lost-center: 100% no-flex*/
	box-shadow: 1px 1px 3px rgba(darken($kal-dark, 20), 0.3)


$footer-bg-color = darken($kal-lite, 50)

.Footer
	h1, h2, h3
		color: light($footer-bg-color) ? $kal-dark : $kal-lite
	background: $footer-bg-color

#Bottom
	lost-center: 1600px no-flex
	text-align: center;
	p
		text-align: center;
	padding: gutter



#crumbs
	ul
		padding: 0
		margin: 0
		list-style: none
	li
		padding: 0
		margin: 0
		list-style: none
		float: left
		a
			text-decoration: none
		text-transform: uppercase
		font-size: 0.7em
		font-weight: 300
		&:after
			content: " / "
			margin-right: 1em
			padding-left: 1em
		&:last-child:after
			display: none
		+medium()
			display: block
			float: none
			&:after
				display: none



@import 'button'
@import 'cards'
@import 'product'