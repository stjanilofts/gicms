.Card
	box-shadow: 1px 1px 3px rgba(darken($kal-dark, 20), 0.3)
	min-height: 200px

	lost-waffle: 1/5

	aspect-ratio(1,1)

	color: #FFF;

	overflow: hidden

	&__color
		kal-fill()
		background: #000
		/*background: $kal-green*/
		opacity: 0.15
		transition: all .4s ease-in-out

	&__image
		kal-fill()
		display: inline-block;
		-webkit-transform: scale(1, 1)
		-moz-transform: scale(1, 1)
		-ms-transform: scale(1, 1)
		-o-transform: scale(1, 1)
		transform: scale(1, 1)
		transition: all .4s ease-in-out
		-webkit-backface-visibility: hidden;
		-moz-backface-visibility:    hidden;
		-ms-backface-visibility:     hidden;

	&:focus,
	&:active,
	&:hover
		color: #FFF

		.Card__color
			display: block;
			z-index: 2
			opacity: 0.55
			background: darken($kal-green, 50%)
			transition: all .4s ease-in-out

		.Card__image
			display: block;
			z-index: 1;
			-webkit-transform: scale(1.1, 1.1)
			-moz-transform: scale(1.1, 1.1)
			-ms-transform: scale(1.1, 1.1)
			-o-transform: scale(1.1, 1.1)
			transform: scale(1.1, 1.1)
			transition: all .4s ease-in-out

	&__content
		display: block;
		position: absolute
		top: 50%
		right: auto
		bottom: auto
		left: 50%
		-webkit-transform: translate(-50%, -50%)
		transform: translate(-50%, -50%)
		z-index: 3
		font-size: 0.8em
		line-height: 1.5em
		text-transform: uppercase
		text-align: center
		font-weight: 700
		text-rendering: optimizeLegibility !important
		text-shadow: 1px 1px 0px #000, -1px -1px 0px #000, -1px 1px 0px #000, 1px -1px 0px #000
		font-family: $oswald
		-webkit-backface-visibility: hidden;
		-moz-backface-visibility:    hidden;
		-ms-backface-visibility:     hidden;

		&:before, &:after
			clear: both;
			display: block
			content: " ";
			width: 60px;
			text-align: center
			margin: 0 auto;
			height: 0.2em;
			background: $kal-green
			position: relative
		&:before
			display: none
			visibility: hidden
			margin-bottom: 0.33em
		&:after
			margin-top: 0.33em


	+xlarge()
		lost-waffle: 1/4

	+large()
		lost-waffle: 1/3

	+medium()
		lost-waffle: 1/2

	+small()
		lost-waffle: 1/2

	+xsmall()
		lost-waffle: 1/1