.Product
	box-shadow: 1px 1px 3px rgba(darken($kal-dark, 20), 0.3)
	position: relative

	/*lost-center: 100% no-flex*/
	lost-center: 1600px no-flex
	/*min-height: 40vh*/
	/*background: rgba(0, 0, 0, 0.25)*/

	&__left
		height: 100%
		lost-column: 2/5 2 0px

		background: rgba($footer-bg-color, 0.25)

		+medium()
			lost-column: 1/2 2 0px

		+small()
			lost-column: 1/1 1 0px

	&__images
		/*background: rgba($footer-bg-color, 0.25)*/

	&__image
		line-height: 0em
		img
			width: 100%
	
	&__extra-image
		cursor: pointer

	&__extra-images
		div
		img
			width: 100%

	&__right
		position: relative
		lost-column: 3/5 2 gutter

		+medium()
			lost-column: 1/2 2 gutter

		color: $kal-lite

		+small()
			lost-column: 1/1 1 gutter

	&__content
		padding: gutter

		h1
			/*border-bottom: 0.1em solid $kal-green*/
			text-transform: uppercase
			padding-top: 0
			margin-top: 0
			/*padding-bottom: 0.5em
			margin-bottom: 0.5em*/